{
    "name": "rhema",
    "author": "FE",
    "version": "0.8.7",
    "description": "Node framework based on Express.",
    "main": "index.js",
    "scripts": {
        "findleaks": "check-for-leaks",
        "test": "NODE_ENV=prod mocha -R spec --bail --exit ./lib/**/tests/**/*-test.js",
        "coverage": "istanbul cover _mocha -- -R spec --bail --exit ./lib/**/tests/**/*-test.js",
        "eslint": "eslint '*.js' lib --ignore-pattern 'lib/**/tests/**'",
        "eslint:fix": "npm run eslint -- --fix",
        "postcoverage": "rm -rf ./build && rm -rf ./coverage",
        "docs": "docsify serve docs",
        "posttest": "rm -rf ./build",
        "testSpec": "bash -c 'mocha -R min --bail --exit ./lib/${0}/tests/**/*-test.js'",
        "coverageSpec": "bash -c 'istanbul cover _mocha -- -R spec --bail --exit ./lib/${0}/tests/**/*-test.js'"
    },
    "pre-commit": [
        "findleaks",
        "test"
    ],
    "dependencies": {
        "compression": "1.7.2",
        "cookie-parser": "1.4.3",
        "cors": "2.8.4",
        "csurf": "1.9.0",
        "express": "4.16.4",
        "helmet": "3.12.1",
        "method-override": "^2.3.10",
        "node-statsd": "0.1.1",
        "pug": "2.0.3",
        "serve-static": "1.13.2"
    },
    "devDependencies": {
        "chai": "4.1.2",
        "check-for-leaks": "1.2.0",
        "docsify": "4.6.10",
        "eslint": "4.19.1",
        "istanbul": "1.1.0-alpha.1",
        "lerna": "^3.8.4",
        "mocha": "5.2.0",
        "pre-commit": "1.2.2",
        "sinon": "5.0.7"
    }
}
